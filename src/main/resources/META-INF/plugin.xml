<idea-plugin>
    <id>edu.postech.csed332.team3.markdowndoc</id>
    <name>MarkdownDoc</name>
    <vendor email="j.yoon@postech.ac.kr" url="https://csed332.postech.ac.kr/team3-2020/MarkdownDoc">Team3</vendor>

    <description>Add Markdown and live rendering capabilities to javadoc.</description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="MarkdownDoc" anchor="right"
                    factoryClass="edu.postech.csed332.team3.markdowndoc.BrowserWindowFactory"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <completion.contributor language="any"
                                implementationClass="edu.postech.csed332.team3.markdowndoc.MarkdownCompletionContributor"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <defaultLiveTemplates file="/MarkdownCompletion.xml"/>
        <liveTemplateContext implementation="edu.postech.csed332.team3.markdowndoc.MarkdownContext"/>
    </extensions>
    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>